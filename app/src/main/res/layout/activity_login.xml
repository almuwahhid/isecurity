<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="@dimen/dimen_32dp"
    tools:context=".app.login.LoginActivity">
    <LinearLayout
        android:layout_centerVertical="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_logo"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_32dp"
            android:orientation="vertical">
            <TextView
                android:layout_marginLeft="@dimen/dimen_12dp"
                android:textSize="@dimen/dimen_12dp"
                android:textColor="@color/grey_500"
                android:text="Your Phone Number"
                android:layout_width="wrap_content"
                style="@style/SubtitleTextOneRow"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.rilixtech.widget.countrycodepicker.CountryCodePicker
                    android:id="@+id/ccp"
                    android:layout_width="wrap_content"
                    android:paddingTop="@dimen/dimen_4dp"
                    android:paddingBottom="@dimen/dimen_4dp"
                    android:layout_marginLeft="@dimen/dimen_12dp"
                    android:gravity="center_vertical"
                    app:ccp_defaultCode="60"
                    android:layout_height="@dimen/dimen_32dp" />
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_marginLeft="@dimen/dimen_4dp"
                    android:id="@+id/edt_phone"
                    android:layout_width="match_parent"
                    android:paddingBottom="@dimen/dimen_4dp"
                    style="@style/EditText.Form"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_field"
                    android:drawableTint="#B3B4B4B4"
                    android:hint="Phone Number"
                    android:inputType="phone"
                    android:textColorHint="#B3B4B4B4" />
            </LinearLayout>
        </LinearLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:layout_height="wrap_content"
            app:passwordToggleDrawable="@drawable/password_selector"
            app:passwordToggleEnabled="true">
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edt_password"
                android:padding="8dp"
                android:background="@drawable/bg_field"
                style="@style/EditText.Form"
                android:drawablePadding="20dp"
                android:drawableTint="#B3B4B4B4"
                android:hint="Password"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            style="@style/Text.Standard"
            android:layout_marginTop="@dimen/dimen_12dp"
            android:text="Forgot Password?"
            android:layout_gravity="right"
            android:clickable="true"
            android:id="@+id/tv_forgotpassword"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_marginTop="@dimen/dimen_16dp"
            android:layout_marginBottom="@dimen/dimen_8dp"
            android:background="@drawable/button_main"
            android:textColor="@color/white"
            android:text="SIGN IN"
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <Button
            android:layout_marginTop="@dimen/dimen_16dp"
            android:layout_marginBottom="@dimen/dimen_8dp"
            android:background="@drawable/button_line"
            android:textColor="@color/colorPrimary"
            android:text="CREATE AN ACCOUNT"
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
</RelativeLayout>