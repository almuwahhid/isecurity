<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".app.securitymenu.SecurityAdapter">
    <androidx.cardview.widget.CardView
        style="@style/clickable"
        android:id="@+id/card_menu"
        app:cardCornerRadius="@dimen/dimen_4dp"
        app:contentPadding="@dimen/dimen_12dp"
        app:cardBackgroundColor="@color/white"
        android:elevation="@dimen/dimen_2dp"
        android:layout_marginLeft="@dimen/dimen_16dp"
        android:layout_marginRight="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_4dp"
        android:layout_marginBottom="@dimen/dimen_4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_menu"
                android:layout_width="@dimen/dimen_40dp"
                android:src="@drawable/ic_files_menu"
                android:layout_height="@dimen/dimen_40dp"/>
            <LinearLayout
                android:layout_marginLeft="@dimen/dimen_12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_centerVertical="true"
                        android:text="Files"
                        android:id="@+id/tv_title"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dimen_16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_status"
                        android:layout_centerVertical="true"
                        android:paddingLeft="@dimen/dimen_12dp"
                        android:paddingRight="@dimen/dimen_12dp"
                        android:paddingBottom="@dimen/dimen_4dp"
                        android:paddingTop="@dimen/dimen_4dp"
                        android:text="ON"
                        android:textColor="@color/grey_700"
                        android:background="@drawable/bg_btn_off"
                        android:textSize="@dimen/dimen_10dp"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_subtitle"
                        style="@style/Text.Standard.OneRow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toStartOf="@+id/img_chevron"
                        android:text="Enabled access files remotely on PC/Web" />
                    <ImageView
                        android:layout_marginTop="@dimen/dimen_4dp"
                        android:layout_alignParentRight="true"
                        android:id="@+id/img_chevron"
                        android:layout_marginLeft="@dimen/dimen_4dp"
                        android:layout_width="wrap_content"
                        android:src="@drawable/ic_icon_chevron_right"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>