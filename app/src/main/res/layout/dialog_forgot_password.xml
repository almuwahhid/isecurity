<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/lay_dialog"
    android:background="@drawable/bg_dialog"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout android:layout_width="@dimen/dimen_128dp"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_grey"
        android:layout_height="6dp"></LinearLayout>
    <LinearLayout
        android:paddingTop="@dimen/dimen_24dp"
        android:orientation="vertical"
        android:layout_margin="@dimen/dimen_16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/forgot_password"
                android:textColor="@color/colorPrimary"
                android:id="@+id/tv_title"
                android:layout_centerVertical="true"
                style="@style/Text.TitleField.Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="@dimen/dimen_16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_email"
                android:layout_width="match_parent"
                style="@style/EditText.Form"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_field"
                android:drawablePadding="20dp"
                android:drawableTint="#B3B4B4B4"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textColorHint="#B3B4B4B4" />
        </com.google.android.material.textfield.TextInputLayout>
        <Button
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/dimen_24dp"
            android:background="@drawable/button_main"
            android:textColor="@color/white"
            android:text="@string/send"
            android:id="@+id/btn_send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
</RelativeLayout>
