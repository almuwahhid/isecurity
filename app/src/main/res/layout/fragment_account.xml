<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorBgHome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".app.accountmenu.AccountFragment">
    <RelativeLayout
        android:background="@drawable/bg_hometop"
        android:layout_width="match_parent"
        android:layout_height="250dp">
        <LinearLayout
            android:id="@+id/lay_photoprofile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <lib.alframeworkx.utils.avatarview.views.AvatarView
                android:id="@+id/avatarview"

                android:layout_marginTop="@dimen/dimen_16dp"
                android:layout_width="@dimen/dimen_80dp"
                android:layout_height="@dimen/dimen_80dp"/>
            <TextView
                android:id="@+id/tv_name"
                android:text="Nicholas Ng"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/dimen_8dp"
                style="@style/Text.SubSingleTitle.Regular"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_email"

                android:text="nicholas99@gmail.com"
                android:textColor="@color/white"
                style="@style/Text.Information.Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="220dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:layout_margin="@dimen/dimen_16dp"
            app:cardCornerRadius="@dimen/dimen_4dp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="@dimen/dimen_2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/lay_editprofile"
                    style="@style/clickable"
                    android:layout_marginBottom="@dimen/dimen_2dp"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_height="@dimen/dimen_56dp">
                    <LinearLayout
                        android:padding="@dimen/dimen_16dp"
                        android:layout_width="match_parent"
                        android:gravity="center_vertical"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:id="@+id/img_icon"
                            android:tint="@color/grey_600"
                            android:src="@drawable/ic_edit_profile"
                            android:layout_width="@dimen/dimen_22dp"
                            android:layout_height="@dimen/dimen_22dp" />
                        <TextView
                            android:layout_marginLeft="@dimen/dimen_16dp"
                            android:id="@+id/tv_title"
                            android:text="@string/account_editprofile"
                            style="@style/Text.Information.Regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <ImageView
                        android:layout_marginRight="@dimen/dimen_16dp"
                        android:id="@+id/img_edit"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_icon_chevron_right"
                        android:layout_width="@dimen/dimen_18dp"
                        android:layout_height="@dimen/dimen_18dp" />
                    <LinearLayout
                        android:layout_marginLeft="@dimen/dimen_16dp"
                        android:layout_alignParentBottom="true"
                        android:layout_width="match_parent"
                        android:background="@color/grey_400"
                        android:layout_height="0.5dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/lay_changepassword"
                    style="@style/clickable"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_marginBottom="@dimen/dimen_2dp"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_height="@dimen/dimen_56dp">
                    <LinearLayout
                        android:padding="@dimen/dimen_16dp"
                        android:layout_width="match_parent"
                        android:gravity="center_vertical"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:tint="@color/grey_600"
                            android:src="@drawable/ic_change_password"
                            android:layout_width="@dimen/dimen_22dp"
                            android:layout_height="@dimen/dimen_22dp" />
                        <TextView
                            android:layout_marginLeft="@dimen/dimen_16dp"
                            android:text="@string/account_changepassword"
                            style="@style/Text.Information.Regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <ImageView
                        android:layout_marginRight="@dimen/dimen_16dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_icon_chevron_right"
                        android:layout_width="@dimen/dimen_18dp"
                        android:layout_height="@dimen/dimen_18dp" />
                </RelativeLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_margin="@dimen/dimen_16dp"
            app:cardCornerRadius="@dimen/dimen_4dp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="@dimen/dimen_2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/lay_signout"
                    style="@style/clickable"
                    android:layout_marginBottom="@dimen/dimen_2dp"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_height="@dimen/dimen_56dp">
                    <TextView
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/red_500"
                        android:layout_marginLeft="@dimen/dimen_16dp"
                        android:text="@string/account_signout"
                        style="@style/Text.Information.Regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</RelativeLayout>
